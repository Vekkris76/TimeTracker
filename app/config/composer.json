{
    "name": "timetracker/app",
    "description": "TimeTracker - Sistema de seguimiento de tiempo corporativo",
    "type": "project",
    "license": "proprietary",
    "version": "2.1.0",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "files": [
            "env-loader.php",
            "config.php",
            "validators.php",
            "audit-logger.php",
            "rate-limiter.php"
        ]
    },
    "scripts": {
        "test": "phpunit tests",
        "migrate-pins": "php migrate-pins.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
