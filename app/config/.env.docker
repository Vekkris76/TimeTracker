# TimeTracker - Docker Environment Variables

# Base de datos (Docker)
DB_HOST=db
DB_NAME=timetracker
DB_USER=timetracker_user
DB_PASS=timetracker_pass_123
DB_CHARSET=utf8mb4

# Configuración de aplicación
APP_ENV=development
APP_DEBUG=true
APP_DOMAIN=localhost

# Seguridad (desarrollo - más permisivo)
RATE_LIMIT_ATTEMPTS=10
RATE_LIMIT_MINUTES=15
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=debug
LOG_FILE=/var/log/timetracker/app.log
