# TimeTracker - Variables de Entorno
# Copiar este archivo como .env y editar con valores reales

# Base de datos
DB_HOST=localhost
DB_NAME=timetracker
DB_USER=timetracker_user
DB_PASS=CAMBIAR_PASSWORD_AQUI
DB_CHARSET=utf8mb4

# Configuración de aplicación
APP_ENV=production
APP_DEBUG=false
APP_DOMAIN=timetracker.resol.dom

# Seguridad
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_MINUTES=15
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/timetracker/app.log
